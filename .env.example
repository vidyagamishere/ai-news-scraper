# AI News Scraper API Configuration

# Claude API (required for content processing)
CLAUDE_API_KEY=your_claude_api_key_here

# Database Configuration
DATABASE_PATH=ai_news.db

# Scraping Configuration
MAX_ARTICLES_PER_SOURCE=10
CACHE_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=30

# CORS Configuration
ALLOWED_ORIGINS=*

# Google OAuth Configuration (required for authentication)
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here.apps.googleusercontent.com

# JWT Configuration (required for user sessions)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Email Configuration (required for digest emails)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@ai-daily.com
FROM_NAME=AI Daily

# Optional: Logging
LOG_LEVEL=INFO

# Optional: Port Configuration
PORT=8000