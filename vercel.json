{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/admin-validation",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/admin/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "ADMIN_API_KEY": "@admin_api_key",
    "ANTHROPIC_API_KEY": "@anthropic_api_key"
  }
}