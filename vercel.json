{
  "version": 2,
  "builds": [
    {
      "src": "api/main_with_auth.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/main_with_auth"
    }
  ],
  "env": {
    "CLAUDE_MODEL": "claude-3-haiku-20240307",
    "DATABASE_PATH": "/tmp/ai_news.db",
    "LOG_LEVEL": "INFO",
    "CACHE_ENABLED": "true",
    "RATE_LIMIT_REQUESTS_PER_MINUTE": "60",
    "FROM_EMAIL": "noreply@ai-daily.com",
    "FROM_NAME": "AI Daily",
    "AUTO_UPDATE_INTERVAL_HOURS": "8"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://ai-news-react-r5nbhghfd-vijayan-subramaniyans-projects-0c70c64d.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods", 
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With"
        },
        {
          "key": "Cache-Control",
          "value": "public, s-maxage=900, stale-while-revalidate=1800"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/update",
      "schedule": "0 8 * * *"
    }
  ]
}